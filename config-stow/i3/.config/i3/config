bindsym $mod+k exec --no-startup-id ~/.config/i3/scripts/user/window-tool focus up
bindsym $mod+l exec --no-startup-id ~/.config/i3/scripts/user/window-tool focus right

# focus windows
bindsym $alt+Tab focus next
bindsym $alt+Shift+Tab focus prev

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# swap focused window with the one in direction
bindsym $alt+Shift+h exec --no-startup-id ~/.config/i3/scripts/user/window-tool swap left
bindsym $alt+Shift+j exec --no-startup-id ~/.config/i3/scripts/user/window-tool swap down
bindsym $alt+Shift+k exec --no-startup-id ~/.config/i3/scripts/user/window-tool swap up
bindsym $alt+Shift+l exec --no-startup-id ~/.config/i3/scripts/user/window-tool swap right

# focus the parent container
bindsym $mod+u focus parent
bindsym $mod+i focus child


