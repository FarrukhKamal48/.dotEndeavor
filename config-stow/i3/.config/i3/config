# config starts here: #
#######################

# font pango: DejaVu Sans Mono 10
font pango: Jetbrains Mono Nerd Font 10

# set the mod key to the winkey:
set $mod Mod4
set $alt Mod1

# set $normal "NORMAL"
set $normal "default"
set $insert "INSERT"
set $command "COMMAND"

set $bluetooth "Blutooth"
set $wifi "Wifi"
set $winSendTo "Workspace Send"
set $resize "Resize"
set $brightness "Brightness"
set $volume "Volume"
set $power_profiles "Power Profiles"

# resize variables
set $winResizeSpeed 20px
set $winMoveSpeed 20px

# sound variables  run: pactl list short sinks  to see all the sinks
set $soundPeats 84:AC:60:31:89:58
set $sink_system alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink 
set $sink_soundPeats bluez_output.84_AC_60_31_89_58.1 

######################################
# *Neovim style---------------------------------------------------------------------------------------------------------------------------------------
######################################


mode $normal {

    # close window
    bindsym q kill
    # close all
    bindsym Shift+q [all] kill

    # focus windows
    bindsym h focus left
    bindsym j focus down
    bindsym k focus up
    bindsym l focus right

    # focus the parent container
    bindsym a focus parent

    # move windows
    bindsym $alt+h move left
    bindsym $alt+j move down
    bindsym $alt+k move up
    bindsym $alt+l move right

    # next/previous workpace
    bindsym Shift+l workspace next
    bindsym Shift+h workspace prev
    # take focused container to workspace
    bindsym Shift+k move container to workspace  next; workspace next
    bindsym Shift+j move container to workspace  prev; workspace prev

    # go to workpace
    bindsym 1 workspace  $ws1
    bindsym 2 workspace  $ws2
    bindsym 3 workspace  $ws3
    bindsym 4 workspace  $ws4
    bindsym 5 workspace  $ws5
    bindsym 6 workspace  $ws6
    bindsym 7 workspace  $ws7
    bindsym 8 workspace  $ws8
    bindsym 9 workspace  $ws9
    bindsym 0 workspace  $ws10

    # take to workpace
    bindsym Shift+1 move container to workspace  $ws1; workspace $ws1 
    bindsym Shift+2 move container to workspace  $ws2; workspace $ws2 
    bindsym Shift+3 move container to workspace  $ws3; workspace $ws3 
    bindsym Shift+4 move container to workspace  $ws4; workspace $ws4 
    bindsym Shift+5 move container to workspace  $ws5; workspace $ws5 
    bindsym Shift+6 move container to workspace  $ws6; workspace $ws6 
    bindsym Shift+7 move container to workspace  $ws7; workspace $ws7 
    bindsym Shift+8 move container to workspace  $ws8; workspace $ws8 
    bindsym Shift+9 move container to workspace  $ws9; workspace $ws9 
    bindsym Shift+0 move container to workspace  $ws10; workspace $ws10


    # layouts

    # split in horizontal orientation
    bindsym d split h
    # split in vertical orientation
    bindsym f split v

    # enter fullscreen mode for the focused container
    bindsym m fullscreen toggle
    # toggle tiling / floating
    bindsym n floating toggle

    # change focus between tiling / floating windows
    bindsym Shift+space focus mode_toggle

    # change container layout (stacked, tabbed, toggle split)
    bindsym bracketleft layout stacking
    bindsym bracketright layout tabbed
    bindsym s layout toggle split

    bindsym $mod+b layout toggle splith splitv stacking tabbed
    bindsym $mod+Up layout toggle stacking tabbed splith splitv
    bindsym $mod+Down layout toggle splitv splith tabbed stacking  

    # start apps
    bindsym space exec --no-startup-id alacritty
    bindsym g exec --no-startup-id /usr/bin/brave
    bindsym e exec --no-startup-id alacritty -e ranger
    bindsym $mod+Shift+equal exec --no-startup-id ~/.config/i3/scripts/colorpicker

    # Open copyq context menu
    bindsym $alt+c exec --no-startup-id copyq menu
    bindsym $alt+z exec --no-startup-id copyq next
    bindsym $alt+x exec --no-startup-id copyq previous

    # rofi app menu
    bindsym slash exec rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi
    # rofi show all windows
    bindsym Tab exec rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi
    # power profiles
    bindsym Shift+p exec ~/.config/i3/scripts/power-profiles

    # exit-menu
    bindsym Shift+o exec ~/.config/i3/scripts/powermenu
    bindsym Shift+BackSpace exec systemctl poweroff
    bindsym Shift+Return exec systemctl reboot
    bindsym Shift+backslash exec i3-msg exit 
    # bindsym Shift+backslash exec ~/.config/i3/scripts/blur-lock

    # Volume
    bindsym F2 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
    bindsym F3 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up
    # Backlight setting using dunst osc
    bindsym F10 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
    bindsym F9 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down

    # mute
    #bindsym XF86AudioMute exec amixer sset Master toggle && killall -USR1 i3blocks
    # use meta keys showing osc using dunst
    bindsym F1 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_mute


    # switch to modes
    bindsym i mode $insert
    bindsym Shift+semicolon mode $command

    bindsym r mode $resize
    bindsym w mode $winSendTo
    bindsym b mode $brightness
    bindsym v mode $volume
    bindsym u mode $bluetooth
    bindsym i mode $wifi

    bindsym $mod+Shift+e reload; mode $normal
    bindsym $mod+Shift+r restart; mode $normal

    bindsym Escape mode "default"
}
bindsym $mod+$alt+n mode $normal
# bindsym $alt+apostrophe mode $normal
# bindsym $alt+space mode $normal

mode $insert {

    # focus windows
    bindsym $alt+Tab focus next
    bindsym $alt+Shift+Tab focus prev
    # change focus between tiling / floating windows
    bindsym $mod+Shift+space focus mode_toggle

    # enter fullscreen mode for the focused container
    bindsym $mod+m fullscreen toggle
    # toggle tiling / floating
    bindsym $mod+n floating toggle

    # switch to workspace
    bindsym $mod+1    workspace  $ws1
    bindsym $mod+2    workspace  $ws2
    bindsym $mod+3    workspace  $ws3
    bindsym $mod+4    workspace  $ws4
    bindsym $mod+5    workspace  $ws5
    bindsym $mod+6    workspace  $ws6
    bindsym $mod+7    workspace  $ws7
    bindsym $mod+8    workspace  $ws8
    bindsym $mod+9    workspace  $ws9
    bindsym $mod+0    workspace  $ws10

    # Open copyq context menu
    bindsym $alt+c exec --no-startup-id copyq menu
    bindsym $alt+z exec --no-startup-id copyq next
    bindsym $alt+x exec --no-startup-id copyq previous

    # Volume
    bindsym F2 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
    bindsym F3 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up
    # Backlight setting using dunst osc
    bindsym F10 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
    bindsym F9 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down

    # mute
    bindsym F1 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_mute


    bindsym $mod+Shift+e reload; mode $normal
    bindsym $mod+Shift+r restart; mode $normal

    bindsym $alt+space mode $normal
}

mode $command {

    # close window
    bindsym q kill
    # close all
    bindsym Shift+q [all] kill

    # start apps
    bindsym $mod+space exec --no-startup-id alacritty
    bindsym $mod+g exec --no-startup-id /usr/bin/brave
    bindsym $mod+e exec --no-startup-id ranger
    bindsym $mod+Shift+equal exec --no-startup-id ~/.config/i3/scripts/colorpicker

    # rofi app menu
    bindsym slash exec rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi
    # rofi show all windows
    bindsym Tab exec rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi
    # power profiles
    bindsym Shift+p exec ~/.config/i3/scripts/power-profiles

    # exit-menu
    bindsym Shift+o exec ~/.config/i3/scripts/powermenu
    bindsym Shift+BackSpace exec systemctl poweroff
    bindsym Shift+Return exec systemctl reboot
    bindsym Shift+backslash exec i3-msg exit 
    # bindsym Shift+backslash exec ~/.config/i3/scripts/blur-lock

    # Volume
    bindsym F2 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
    bindsym F3 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up
    # Backlight setting using dunst osc
    bindsym F10 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
    bindsym F9 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down

    # mute
    bindsym F1 exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_mute


    bindsym b mode $brightness
    bindsym v mode $volume
    bindsym r mode $resize
    bindsym u mode $bluetooth
    bindsym i mode $wifi
    bindsym w mode $winSendTo

    bindsym $mod+Shift+e reload; mode $normal
    bindsym $mod+Shift+r restart; mode $normal

    
    bindsym Return mode $normal
}

mode $bluetooth {

    bindsym $mod+Shift+u exec --no-startup-id rfkill unblock bluetooth && sleep 1 && bluetoothctl power on && bluetoothctl connect $soundPeats; mode $normal
    bindsym $mod+Shift+i exec --no-startup-id bluetoothctl power off && sleep 1 && rfkill block bluetooth; mode $normal

    bindsym u exec --no-startup-id rfkill unblock bluetooth && sleep 1 && bluetoothctl power on && bluetoothctl connect $soundPeats; mode $normal 
    bindsym i exec --no-startup-id bluetoothctl power off && sleep 1 && rfkill block bluetooth; mode $normal

    bindsym j exec --no-startup-id ~/.config/i3/scripts/user/setAudioSink $sink_soundPeats; mode $normal
    bindsym k exec --no-startup-id ~/.config/i3/scripts/user/setAudioSink $sink_system; mode $normal

    bindsym Return mode $normal
    bindsym Escape mode $normal
}

mode $wifi {

    # turn internet on/off
    bindsym $mod+Shift+u exec --no-startup-id nmcli radio wifi off; mode $normal
    bindsym $mod+Shift+i exec --no-startup-id nmcli radio wifi on; mode $normal
    bindsym u exec --no-startup-id nmcli radio wifi off; mode $normal
    bindsym i exec --no-startup-id nmcli radio wifi on; mode $normal

    # choose network
    bindsym j exec --no-startup-id alacritty -e nmtui; mode $normal
    bindsym $mod+Shift+j exec --no-startup-id alacritty -e nmtui; mode $normal

    # protonvpn connect
    bindsym k exec --no-startup-id alacritty -e protonvpn-cli c; mode $normal
    bindsym $mod+Shift+k exec --no-startup-id alacritty -e protonvpn-cli c; mode $normal
    # protonvpn disconnect
    bindsym l exec --no-startup-id protonvpn-cli d; mode $normal
    bindsym $mod+Shift+l exec --no-startup-id protonvpn-cli d; mode $normal

    bindsym Return mode $normal
    bindsym Escape mode $normal
}

mode $winSendTo {

    bindsym h focus left
    bindsym j focus down
    bindsym k focus up
    bindsym l focus right

    bindsym 1 move container to workspace $ws1 
    bindsym 2 move container to workspace $ws2
    bindsym 3 move container to workspace $ws3
    bindsym 4 move container to workspace $ws4
    bindsym 5 move container to workspace $ws5
    bindsym 6 move container to workspace $ws6
    bindsym 7 move container to workspace $ws7
    bindsym 8 move container to workspace $ws8
    bindsym 9 move container to workspace $ws9 
    bindsym 10 move container to workspace $ws10 

    bindsym Return mode $normal
    bindsym Escape mode $normal
}

mode $resize {

    bindsym h; exec --no-startup-id xset r rate 100 50; resize shrink width $winResizeSpeed 
    bindsym j; exec --no-startup-id xset r rate 100 50; resize grow height $winResizeSpeed 
    bindsym k; exec --no-startup-id xset r rate 100 50; resize shrink height $winResizeSpeed 
    bindsym l; exec --no-startup-id xset r rate 100 50; resize grow width $winResizeSpeed

    bindsym Shift+h move left $winMoveSpeed
    bindsym Shift+j move down $winMoveSpeed
    bindsym Shift+k move up $winMoveSpeed 
    bindsym Shift+l move right $winMoveSpeed 
    
    bindsym Return; exec --no-startup-id xset r rate 200 50; mode $normal
    bindsym Escape; exec --no-startup-id xset r rate 200 50; mode $normal
}

mode $brightness {
    bindsym a exec --no-startup-id brightnessctl -q set 5%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_notif  
    bindsym s exec --no-startup-id brightnessctl -q set 25%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_notif  
    bindsym d exec --no-startup-id brightnessctl -q set 50%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_notif  
    bindsym f exec --no-startup-id brightnessctl -q set 75%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_notif  
    bindsym g exec --no-startup-id brightnessctl -q set 100%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_notif;
 
    bindsym j exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
    bindsym k exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down

    bindsym Return mode $normal
    bindsym Escape mode $normal
}

mode $volume {
    bindsym a exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 20%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_notif 
    bindsym s exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 40%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_notif 
    bindsym d exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 50%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_notif 
    bindsym f exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 60%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_notif 
    bindsym g exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ 100%; exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_notif 
 
    bindsym j exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
    bindsym k exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up

    bindsym j exec --no-startup-id ~/.config/i3/scripts/user/setAudioSink $sink_soundPeats; mode $normal
    bindsym k exec --no-startup-id ~/.config/i3/scripts/user/setAudioSink $sink_system; mode $normal

    bindsym Return mode $normal
    bindsym Escape mode $normal
}


mode $power_profiles {
    bindsym p exec --no-startup-id echo "631225" | sudo -S auto-cpufreq --force=reset; mode $normal
    bindsym o exec --no-startup-id echo "631225" | sudo -S auto-cpufreq --force=powersave; mode $normal
    bindsym i exec --no-startup-id echo "631225" | sudo -S auto-cpufreq --force=performance; mode $normal

    bindsym $mod+Shift+p exec --no-startup-id echo "631225" | sudo -S auto-cpufreq --force=reset; mode $normal
    bindsym $mod+Shift+o exec --no-startup-id echo "631225" | sudo -S auto-cpufreq --force=powersave; mode $normal
    bindsym $mod+Shift+i exec --no-startup-id echo "631225" | sudo -S auto-cpufreq --force=performance; mode $normal

    bindsym Return mode $normal
    bindsym Escape mode $normal
}

